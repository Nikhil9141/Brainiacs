<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Aptitude Learning Hub</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 20px;
            width: 300px;
            transition: transform 0.3s ease;
        }

        .container:hover {
            transform: scale(1.05);
        }

        .section-title {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            color: #2c3e50;
        }

        .section-title i {
            margin-right: 10px;
            font-size: 24px;
        }

        .topic-button {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            background-color: plum;
            color: black;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .topic-button:hover {
            background-color: purple;
        }
    </style>
</head>
<body>
    <!-- General Aptitude Container -->
    <div class="container" style="background-color: #e8f4ea;">
        <div class="section-title">
            <i class="fas fa-brain" style="color: #2ecc71;"></i>
            <h2>Quantitative Aptitude</h2>
        </div>
        <button class="topic-button" onclick="window.location.href='/Algebra'">Algebra</button>
        <button class="topic-button" onclick="window.location.href='/Arithmetic'">Arithmetic</button>
        <button class="topic-button" onclick="window.location.href='/TimeandDistance'">Time and Distance</button>
        <button class="topic-button" onclick="window.location.href='/NumberSystem'">Number System</button>
        <button class="topic-button" onclick="window.location.href='/RatioandProportion'">Ratio and Proportion</button>
    </div>

    <!-- Logical Aptitude Container -->
    <div class="container" style="background-color: #e6f2ff;">
        <div class="section-title">
            <i class="fas fa-calculator" style="color: #3498db;"></i>
            <h2>Logical Aptitude</h2>
        </div>
        <button class="topic-button" onclick="window.location.href='/DataSufficiency'">Data Sufficiency</button>
        <button class="topic-button" onclick="window.location.href='/Syllogisms'">Syllogism</button>
        <button class="topic-button" onclick="window.location.href='/CriticalThinking'">Critical Thinking</button>
        <button class="topic-button" onclick="window.location.href='/DecisionMaking'">Decision Making</button>
    </div>

    <!-- Verbal & Logical Reasoning Container -->
    <div class="container" style="background-color: #fff2e6;">
        <div class="section-title">
            <i class="fas fa-comment-dots" style="color: #e67e22;"></i>
            <h2>Verbal Aptitude</h2>
        </div>
        <button class="topic-button" onclick="window.location.href='/Vocabulary'">Vocabulary</button>
        <button class="topic-button" onclick="window.location.href='/Grammar'">Grammar</button>
        <button class="topic-button" onclick="window.location.href='/ReadingComprehension'">Reading Comprehension</button>
        <button class="topic-button" onclick="window.location.href='/Synonyms&Antonyms'">Synonyms & Antonyms</button>
    </div>

    <!-- Engineering Container -->
    <div class="container" style="background-color: #e6fff2;">
        <div class="section-title">
            <i class="fas fa-laptop-code" style="color: #27ae60;"></i>
            <h2>Engineering Aptitude</h2>
        </div>
        <button class="topic-button" onclick="window.location.href='/Artificialintelligence'">Artificial Intelligence</button>
        <button class="topic-button" onclick="window.location.href='/Mechanical'">Mechanical</button>
        <button class="topic-button" onclick="window.location.href='/Civil'">Civil</button>
        <button class="topic-button" onclick="window.location.href='/ComputerScience'">Computer Science</button>
        <button class="topic-button" onclick="window.location.href='/Electronics'">Electronics</button>
    </div>

    <div class="container" style="background-color: #e8d7f0;">
        <div class="section-title">
            <i class="fas fa-lightbulb" style="color:palevioletred;"></i>
            <h2>General Aptitude</h2>
        </div>
        <button class="topic-button" onclick="window.location.href='/ProblemsonAges'">Problems on Ages</button>
        <button class="topic-button" onclick="window.location.href='/PercentageProblems'">Percentage Problems</button>
        <button class="topic-button" onclick="window.location.href='/Profitandloss'">Profit and Loss</button>
        <button class="topic-button" onclick="window.location.href='/PermutationandCombination'">Permutation and Combination</button>
        <button class="topic-button" onclick="window.location.href='/AlligationandMixture'">Alligation and Mixture</button>
    </div>

    <!-- Online Tests Container -->
    <div class="container" style="background-color: #f9e8f6;">
        <div class="section-title">
            <i class="fas fa-desktop" style="color: #d35400;"></i>
            <h2>Online Tests</h2>
        </div>
        <button class="topic-button" onclick="window.location.href='/FullsyllabusTest'">Full Syllabus Test</button>
    </div>

    <div class="container" style="background-color: #e9f1f7;">
        <div class="section-title">
            <i class="fas fa-laptop-code" style="color: #5866de;"></i>
            <h2>Resume Builder</h2>
        </div>
        <button class="topic-button" onclick="window.location.href='/resume-builder'">Resume Builder</button>
    </div>

</body>
</html>
